package hw5;

public class BoundedBuffer {

	private final int BUFFER_SIZE = 1000;
	private int size = 0;
	private int index = 0;
	private double[] buffer = new double[BUFFER_SIZE];
	
	public void push(double item){
		System.out.println("Producer index: " + index);
		size++;
		buffer[index] = item;
		index = (index + 1) % BUFFER_SIZE;
	}
	
	public double pop(){
		System.out.println("Consumer index: " + index);
		size--;
		int temp = index;
		index = (index - 1) % BUFFER_SIZE;
		return buffer[temp];
	}

	public int size(){return this.size;}
	public boolean isEmpty(){
		if (this.size == 0)
			return true;
		return false;
	}
	public boolean isFull(){
		if (this.size == BUFFER_SIZE)
			return true;
		return false;
	}
}
